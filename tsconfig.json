{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "$components/*": ["components/*"],
      "$components": ["components"],
      "$shadcn/*": ["shadcn/components/*", "shadcn/lib/*"],
      "$util": ["util"],
      "$styles/*": ["styles/*"],
      "$context": ["context"],
      "$icons": ["icons"],
      "$icons/*": ["icons/*"],
      "$lib": ["lib"],
      "$hooks": ["hooks"],
      "$assets/*": ["assets/*"],
      "$types": ["types"],
      "$/*": ["*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
